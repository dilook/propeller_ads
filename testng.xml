<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="PropellerAds UI tests">

    <test name="Login tests">
        <classes>
            <class name="tests.login.LoginWithValidCreds"/>
            <class name="tests.login.LoginAndCancelConfirmation"/>
        </classes>
    </test>

    <test name="Profile tests">
        <classes>
            <class name="tests.profile.SaveUserInfo"/>
            <class name="tests.profile.SavePaymentInfo"/>
            <class name="tests.profile.SaveUserInfoWithEmptyFields"/>
            <class name="tests.profile.SavePaymentInfoWithEmptyFields"/>
        </classes>
    </test>

    <test name="Articles tests">
        <classes>
            <class name="tests.articles.CheckArticlesQuantity"/>
            <class name="tests.articles.CheckArticlePagesAreDisplayed"/>
            <class name="tests.articles.MoveToSavedButtonIsDisabledUntilScroll"/>
            <class name="tests.articles.CheckSavedArticlesFunctionality"/>
            <class name="tests.articles.CheckImageSizeCanBeChangedBySlider"/>
            <class name="tests.articles.VerifyTextsFromPageAndFromFileMatch"/>
        </classes>
    </test>

</suite>